#include <iostream>
using namespace std;

int main() {
    int n,i;
    int sum=0;
     
    cout << "Enter size of an array: ";
    cin >> n;

    int arr[n];

    cout << "Enter the elements:\n";
    for(i = 0; i < n; i++) {
        cin >> arr[i];
    }
    
    for(i = 0; i < n; i += 2) {
        sum += arr[i];
    }

    cout << "Sum of alternate elements = " << sum;

    return 0;
}
