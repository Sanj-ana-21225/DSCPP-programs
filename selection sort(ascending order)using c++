#include<iostream>
using namespace std;
void swapElements(int &a,int &b)
{
int temp=a;
     a=b;
    b=temp;
}
void selectionSort(int arr[], int n) 
{
    for (int i = n - 1; i > 0; i--) 
    {
        int maxIndex = 0;  
        for (int j = 1; j <= i; j++) {
            if (arr[j] > arr[maxIndex]) 
            {
                maxIndex = j;
            }
        }
       swapElements(arr[i], arr[maxIndex]);
    }
}
void printArray(int arr[], int n) 
{
    for (int i = 0; i < n; i++)
        cout << arr[i] << " ";
    cout << endl;
}

int main() 
{
    int arr[] = {15,9,22,18,13};
    int n = sizeof(arr) / sizeof(arr[0]);

    cout << "Original array: ";
    printArray(arr, n);
    selectionSort(arr, n);

    cout << "Sorted array (ascending): ";
    printArray(arr, n);

    return 0;
}
