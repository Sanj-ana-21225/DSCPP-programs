#include <iostream>
using namespace std;

int main()
{
    int n;
     cout << "Enter the number of elements: ";
     cin >> n;

    int sum = 0;
    int num;

    cout << "Enter the elements:\n";
    for (int i = 0; i < n; i++) {
        cin >> num;
        if (i % 2 == 0) {
            sum += num;
        }
    }

    cout << "Sum of Alternative elements: " << sum << endl;

    return 0;
}
