    #include <iostream>
using namespace std;

void swapElements(int &a, int &b)
{
    int temp = a;
    a = b;
    b = temp;
}

void selectionSort(int arr[], int n)
{
    for (int i = 0; i < n - 1; i++)   
    {
        int maxIndex = i;
        for (int j = i + 1; j < n; j++){
            if (arr[j] > arr[maxIndex])
            {
                maxIndex = j;
            }
        }
        swapElements(arr[i], arr[maxIndex]);
    }
}
void printArray(int arr[], int n)
{
    for (int i = 0; i < n; i++)
        cout << arr[i] << " ";
    cout << endl;
}

int main()
{
    int arr[] = {32,12,19,28,24};
    int n = sizeof(arr) / sizeof(arr[0]);
    cout << "Original array: ";
    printArray(arr, n);

    selectionSort(arr, n);

    cout << "Sorted array (descending): ";
    printArray(arr, n);

    return 0;
}
